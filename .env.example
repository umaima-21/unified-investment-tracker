# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=investment_tracker
DB_USER=postgres
DB_PASSWORD=admin

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# ========================================
# MUTUAL FUNDS APIs
# ========================================
# MFAPI - Free API for NAV data (no key required)
# URL: https://www.mfapi.in/
MFAPI_BASE_URL=https://api.mfapi.in

# CAS Parser - Upload your CAS PDF manually (no API key needed for local parsing)
# We'll parse CAS files locally using PDF libraries

# ========================================
# STOCKS - ICICI DIRECT API
# ========================================
# Step to get: https://api.icicidirect.com/
# 1. Login to ICICIdirect
# 2. Go to Settings > API
# 3. Apply for API access (may require account approval)
# 4. Get API Key and API Secret
ICICIDIRECT_API_KEY=your_icici_api_key
ICICIDIRECT_API_SECRET=your_icici_api_secret
ICICIDIRECT_USER_ID=your_icici_user_id
ICICIDIRECT_PASSWORD=your_icici_password
ICICIDIRECT_BASE_URL=https://api.icicidirect.com

# ========================================
# CRYPTO - COINDCX API
# ========================================
# Step to get: https://coindcx.com/
# 1. Login to CoinDCX
# 2. Go to Settings > API Management
# 3. Create New API Key
# 4. Save API Key and Secret Key (shown only once!)
# 5. Set permissions: Read balances, Read orders, Read trades
COINDCX_API_KEY=your_coindcx_api_key
COINDCX_API_SECRET=your_coindcx_secret_key
COINDCX_BASE_URL=https://api.coindcx.com

# ========================================
# OPTIONAL: ALTERNATIVE STOCK PRICE SOURCES
# ========================================
# Yahoo Finance (Free - no key needed)
# Alpha Vantage (Free tier available)
# Get key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# NSE/BSE APIs (if using official exchange APIs)
NSE_API_KEY=your_nse_api_key

# ========================================
# SCHEDULER CONFIGURATION
# ========================================
# Times in IST (24-hour format)
SCHEDULE_MF_NAV_TIME=20:00
SCHEDULE_STOCK_PRICE_TIME=18:00
SCHEDULE_CRYPTO_PRICE_TIME=21:00
SCHEDULE_PORTFOLIO_UPDATE_TIME=22:00

# Enable/Disable Daily Updates
ENABLE_AUTO_UPDATES=true

# ========================================
# SECURITY
# ========================================
SECRET_KEY=your_secret_key_here_generate_random_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
